<?xml version="1.0"?>
<config>
    <modules>
        <Kolibrii_Banner>
            <version>0.1.0</version>
        </Kolibrii_Banner>
    </modules>
    
    <global>
        <models>
            <banner>
                <class>Kolibrii_Banner_Model</class>
                <resourceModel>banner_mysql4</resourceModel>
            </banner>
            <banner_mysql4>
                <class>Kolibrii_Banner_Model_Mysql4</class>
            </banner_mysql4>
        </models>
        <blocks>
            <banner>
                <class>Kolibrii_Banner_Block</class>
            </banner>
        </blocks>
        <helpers>
            <banner>
                <class>Kolibrii_Banner_Helper</class>
            </banner>  
        </helpers>
    </global>
    
    <admin>
        <routers>
            <banner>
                <use>admin</use>
                <args>
                    <module>Kolibrii_Banner</module>
                    <frontName>banner</frontName>
                </args>
            </banner>
        </routers>
    </admin>
    
    <adminhtml>
        <translate>
            <modules>
                <kolibrii_adminhtml>
                    <files>
                        <banner>Kolibrii_Banner.csv</banner>
                    </files>
                </kolibrii_adminhtml>
            </modules>
        </translate>
        
        <menu>
            <catalog>
                <children>
                    <banner_adminform translate="title" module="banner">
                        <title>My Form</title>
                        <action>banner/adminhtml_myform</action>
                    </banner_adminform>
                </children>
            </catalog>
        </menu>
        
        <acl>
            <resources>
                <admin>
                    <children>
                        <catalog>
                            <children>
                                <banner_adminform>
                                    <title>My Form</title>
                                </banner_adminform>
                            </children>
                        </catalog>
                    </children>
                </admin>
            </resources>
        </acl>
        
        <layout>
            <updates>
                <banner>
                    <file>banner.xml</file>
                </banner>
            </updates>
        </layout>
    </adminhtml>
</config>